{% extends "index.html.j2" %}

{% block content %}
<table hx-indicator="#ind">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>ID</th>
        </tr>
    </thead>
    <tbody id="tbody">
        {% block contact_set %}
        {% for contact in contacts %}
        {% if loop.last %}
        <tr hx-get="/infinite_scroll/contacts/?page={{ page + 1 }}" hx-trigger="revealed" hx-swap="afterend">
            {% else %}
        <tr class="">
            {% endif %}
            <td>{{ contact.name }}</td>
            <td>{{ contact.email }}</td>
            <td>{{ contact.id }}</td>
        </tr>
        {% endfor %}
        {% endblock contact_set %}
    </tbody>
</table>
<img id="ind" src="/static/img/bars.svg" class="htmx-indicator" />
{% endblock %}